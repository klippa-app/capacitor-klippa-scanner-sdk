{
  "name": "@klippa/capacitor-klippa-scanner-sdk",
  "version": "0.2.0",
  "description": "A Capacitor plugin for Ionic to use the Klippa Scanner SDK",
  "type": "module",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "KlippaCapacitorKlippaScannerSdk.podspec"
  ],
  "author": "Robin Farmer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klippa-app/capacitor-klippa-scanner-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/klippa-app/capacitor-klippa-scanner-sdk/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin -destination generic/platform=iOS && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "build": "npm run clean && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist"
  },
  "devDependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/cli": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/docgen": "^0.0.18",
    "@capacitor/ios": "^8.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "rollup": "^4.57.1",
    "typescript": "~5.9.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^8.1.0"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
